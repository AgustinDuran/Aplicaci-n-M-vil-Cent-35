<?xml version="1.0" encoding="utf-8"?>
<!-- diseño: https://www.youtube.com/watch?v=CCpY66soGuE -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.menuAlumno.PerfilAlumnoFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Datos Personales:" />

                    <TextView
                        android:id="@+id/txtNombreData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Nombre: " />

                    <TextView
                        android:id="@+id/txtNumDocData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Documento: " />

                    <TextView
                        android:id="@+id/txtFechaNacData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Fecha de Nacimiento: " />

                    <TextView
                        android:id="@+id/txtPaisNacimData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="País de Nacimiento: " />

                    <TextView
                        android:id="@+id/txtProvNacimData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Provincia de Nacimiento: " />

                    <TextView
                        android:id="@+id/txtLocNacimData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Ciudad de Nacimiento: " />

                    <TextView
                        android:id="@+id/txtTelefonoData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Teléfono: " />

                    <TextView
                        android:id="@+id/txtDireccionData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Dirección: " />

                    <TextView
                        android:id="@+id/txtMailData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Mail: " />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Datos Académicos:" />

                    <TextView
                        android:id="@+id/txtLegajoData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Legajo: " />

                    <TextView
                        android:id="@+id/txtCarreraData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Carrera: " />

                    <TextView
                        android:id="@+id/txtFechaIngData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Fecha de Ingreso: " />

                    <TextView
                        android:id="@+id/txtLibretaData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Libreta: " />

                    <TextView
                        android:id="@+id/txtAnioCurData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Año de Cursada Actual: " />

                    <TextView
                        android:id="@+id/txtMateriasCurData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Materias que cursa: " />

                    <TextView
                        android:id="@+id/txtMateriasAprobData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Materias aprobadas: " />

                    <TextView
                        android:id="@+id/txtEsRegularData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp" />

                    <TextView
                        android:id="@+id/txtDebeFinalesData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp" />

                    <TextView
                        android:id="@+id/txtUltActData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="25sp"
                        android:gravity="right"
                        android:text="Última actualización: "
                        android:textStyle="italic" />

                </LinearLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/prgrssBrDatos"
            style="?android:attr/progressBarStyle"
            android:layout_width="133dp"
            android:layout_height="123dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</FrameLayout>