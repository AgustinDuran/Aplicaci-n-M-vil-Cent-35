<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="agustin.prototipoapp.fragments.ingresantes.IngresantesFragment">

    <ListView
        android:id="@+id/lstVwCarrera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/prgrssBrIngresantes"
            style="?android:attr/progressBarStyle"
            android:layout_width="133dp"
            android:layout_height="123dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imagenRepIngresantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reparacion"
        android:visibility="invisible" />

</FrameLayout>
